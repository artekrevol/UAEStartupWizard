# Production environment variables for deployment

# Enable HTTP-only mode for scrapers (no browser automation)
SCRAPER_HTTP_ONLY_MODE=true

# Use memory cache fallback when Redis is not available
USE_MEMORY_CACHE=true

# Node environment
NODE_ENV=production

# Service-to-service authentication
SERVICE_AUTH_ENABLED=true

# Default cache TTLs
CACHE_SHORT_TTL=60
CACHE_MEDIUM_TTL=300
CACHE_LONG_TTL=3600

# Default performance monitoring thresholds
PERFORMANCE_SLOW_THRESHOLD_MS=1000

# Set log level to reduce verbosity in production
LOG_LEVEL=info